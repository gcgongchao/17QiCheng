<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/QichengActionBarStyle</item>
        <item name="android:actionBarItemBackground">@drawable/bg_action_bar</item>
        <item name="android:windowBackground">@color/white</item>

    </style>
    <style
        name="QichengActionBarTitle"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style
        name="QichengActionBarStyle"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/QichengActionBarTitle</item>
        <item name="android:background">@drawable/ab_background_textured</item>
    </style>

    <style name="NormalTripItemText">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--表单中输入控件的标题样式  -->
    <style name="InputTitle">
        <item name="android:background">@color/main</item>
        <item name="android:textSize">@dimen/input_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/input_title_width</item>
    </style>
    <!--表单控件容器LinearLayout样式-->
    <style name="FormInputContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/form_side_margin</item>
        <item name="android:layout_marginRight">@dimen/form_side_margin</item>
        <item name="android:layout_marginTop">@dimen/form_padding</item>
    </style>
    <!--表单控件容器LinearLayout样式-->
    <style name="FormInputContainerWithBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/form_side_margin</item>
        <item name="android:layout_marginRight">@dimen/form_side_margin</item>
        <item name="android:layout_marginTop">@dimen/form_padding</item>
        <item name="android:background">@drawable/bg_form_input_container</item>
    </style>
    <!--单选框样式 -->
    <style name="GeneralRadioButton">
        <item name="android:background">@drawable/radio_shape</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DetailTripItemText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">3dp</item>
        <!--<item name="android:state_pressed">@color/unavailable</item>
        <item name="android:state_active">@color/main</item>-->
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>
    <!--form中的textInput样式 -->
    <style name="FormEdittext">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/form_edittext_shape</item>
        <item name="android:textColorHint">@color/unavailable</item>
        <item name="android:padding">@dimen/common_gap</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/input_title_text_size</item>
    </style>
    <!--基本textInput样式 -->
    <style name="generalEdittext">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textColorHint">@color/unavailable</item>
        <item name="android:padding">@dimen/common_gap</item>
    </style>
    <style name="bottomTab">
        <item name="android:textColor">@drawable/common_text_color</item>
        <item name="android:background">@color/unavailable</item>
    </style>
    <style name="GrayButton">

    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!--标签控件样式-->
    <style name="labelStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:gravity">center</item>
    </style>

    <!--标签标题控制样式-->
    <style name="labelTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
