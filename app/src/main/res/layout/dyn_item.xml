<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/activity_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_delete_text"
        android:layout_alignParentRight="true"
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:textSize="12sp"
        android:textColor="@drawable/textview_selector_delete"
        />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_margin="4dp"
        app:border_color="@color/main"
        android:src="@drawable/ic_default_portrait" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/portrait"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/main"
        android:text="朕把自己戒了" >
    </TextView>

    <TextView
        android:id="@+id/pasttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/portrait"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="20秒前" >
    </TextView>

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/portrait"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/unavailable" >
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:text="不要问我为什么买这些，女王大人要的！"
        android:textSize="15dp"
        android:textColor="@color/gray_text"
        >
    </TextView>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="2dp"
        android:visibility="gone"
         >
    </ImageView>

    <LinearLayout
        android:id="@+id/bottonlly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/likeimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/ic_like" >
        </ImageView>

        <TextView
            android:id="@+id/liketime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="18dp"
            android:paddingTop="4dp"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/gray_text">
        </TextView>

        <ImageView
            android:id="@+id/shareimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/ic_share" >
        </ImageView>

        <TextView
            android:id="@+id/sharetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="18dp"
            android:paddingTop="4dp"
            android:text="3"
            android:textSize="20dp"
            android:textColor="@color/gray_text">
        </TextView>

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/ic_chat"
           >
        </ImageView>
    </LinearLayout>

</RelativeLayout>