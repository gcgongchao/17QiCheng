<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/trip_detail_row">
<LinearLayout
    android:layout_width="@dimen/zero"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@drawable/detail_dg_trip_item"
    android:gravity="center"
    android:layout_weight="1"
    >
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="乌鲁木齐南"
        android:textColor="@color/main"
        android:background="@drawable/bg_white_circle"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        style="@style/DetailTripItemText"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            style="@style/DetailTripItemText"
            android:textSize="10sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="@dimen/zero"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@drawable/detail_dg_trip_item"
    android:gravity="center"
    android:layout_weight="1"
    >
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="G4"
        android:textColor="@color/main"
        android:background="@drawable/bg_white_roundend_rectangle"
        android:layout_marginRight="@dimen/common_gap"
        android:layout_marginLeft="@dimen/common_gap"
        android:gravity="center"
        style="@style/DetailTripItemText"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015年1月22日"
            style="@style/DetailTripItemText"
            android:textSize="10sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="@dimen/zero"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@drawable/detail_dg_trip_item"
    android:gravity="center"
    android:layout_weight="1"
    >
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="上海虹桥"
        android:background="@drawable/bg_white_circle"
        android:textColor="@color/main"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        style="@style/DetailTripItemText"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            style="@style/DetailTripItemText"
            android:textSize="10sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>
</LinearLayout>
</TableRow>