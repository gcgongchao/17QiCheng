<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_benefit_detail"
        android:layout_margin="@dimen/view_margin_16dp"
        android:gravity="center"
        android:padding="@dimen/view_padding_10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_36dp"
            android:layout_marginBottom="@dimen/view_margin_36dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view_margin_6dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/benefit_icon"
                        android:layout_width="@dimen/view_width_60dp"
                        android:layout_height="@dimen/view_height_60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_didi" />

                    <LinearLayout
                        android:id="@+id/benefit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rmb_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/view_text_size_40sp"
                            android:text="￥"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/benefit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="@dimen/view_text_size_40sp"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:layout_marginBottom="@dimen/view_margin_4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="票券类型："
                        style="@style/benefit_item_text_style" />

                    <TextView
                        android:id="@+id/benefit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="专车券"
                        style="@style/benefit_item_text_style" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:layout_marginBottom="@dimen/view_margin_4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="截止日期："
                        style="@style/benefit_item_text_style" />

                    <TextView
                        android:id="@+id/benefit_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2015-03-31"
                        style="@style/benefit_item_text_style" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:layout_marginBottom="@dimen/view_margin_4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用说明："
                        style="@style/benefit_item_text_style" />

                    <TextView
                        android:id="@+id/benefit_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="费用大于100可用"
                        style="@style/benefit_item_text_style" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:layout_marginBottom="@dimen/view_margin_4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商户信息："
                        style="@style/benefit_item_text_style" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="滴滴专车券，由滴滴专车发送"
                        style="@style/benefit_item_text_style" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_10dp"
                    android:layout_marginBottom="@dimen/view_margin_4dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_test_code" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
