<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="@drawable/tab_selector_menu"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/table_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_selector_menu">

        <ImageView
            android:id="@+id/table_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />


        <TextView
            android:id="@+id/table_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:textColor="@color/gray_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/table_img"
            style="@style/labelTextStyle"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_gray"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <include layout="@layout/layout_separation" />


</LinearLayout>