<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/traveller_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/traveller_recommend_text"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/main"
            android:gravity="center|center_vertical"
            android:padding="@dimen/half_gap"
            android:text="@string/traveller_recommend_text"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <HorizontalScrollView
            android:id="@+id/traveller_recommend_persons_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/traveller_recommend_persons_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/traveller_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="@dimen/zero"
        android:orientation="horizontal"
        android:padding="@dimen/zero">

        <Button
            android:id="@+id/traveller_start_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main"
            android:text="@string/traveller_start_btn_text"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/traveller_end_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_form_input_container"
            android:text="@string/traveller_end_btn_text"
            android:textColor="@color/main"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/traveller_persons_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
